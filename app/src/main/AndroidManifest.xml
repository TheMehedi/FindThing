<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.themehedi.findthings">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:icon="@mipmap/cover"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/cover"
        android:supportsRtl="true"
        android:theme="@style/Theme.FindThing"
        android:usesCleartextTraffic="true">
        <activity
            android:name="com.themehedi.findthings.findPeopleActivity.views.FindPeopleActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.themehedi.findthings.viewDetailsActivity.views.ViewDetailsActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.themehedi.findthings.wastageProductActivity.views.WastageProductActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.themehedi.findthings.dealsProductActivity.views.DealsProductActivity"
            android:exported="true"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.themehedi.findthings.profileActivity.views.ProfileActivity"
            android:exported="true"
            android:screenOrientation="portrait"/>
        <activity android:name="com.themehedi.findthings.registrationActivity.RegistrationActivity"
            android:screenOrientation="portrait"/>
        <activity android:name="com.themehedi.findthings.splashScreenActivity.SplashScreenActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.themehedi.findthings.loginActivity.views.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.themehedi.findthings.mainActivity.views.MainActivity"
            android:screenOrientation="portrait" />

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="${MAPS_API_KEY}" />
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.themehedi.findthing">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:icon="@mipmap/cover"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/cover"
        android:supportsRtl="true"
        android:theme="@style/Theme.FindThing"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".profileActivity.views.ProfileActivity"
            android:exported="true" />
        <activity android:name=".registrationActivity.RegistrationActivity" />
        <activity android:name=".splashScreenActivity.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".loginActivity.views.LoginActivity" />
        <activity android:name=".mainActivity.views.MainActivity" />
    </application>

</manifest>